<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/likeshop_shopImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/profile" />

    <RelativeLayout
        android:id="@+id/likeshop_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/likeshop_shopImage"
        android:layout_alignTop="@id/likeshop_shopImage"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/likeshop_shopImage"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/likeshop_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교촌치킨 서초점"
            android:textColor="#000"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/likeshop_scoreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likeshop_shopName"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/likeshop_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/likeshop_shopName"
                android:text="★" />

            <TextView
                android:id="@+id/likeshop_shopScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/likeshop_shopName"
                android:layout_toRightOf="@id/likeshop_star"
                android:text="4.2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/likeshop_reviewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/likeshop_scoreLayout"
            android:layout_toRightOf="@id/likeshop_scoreLayout">

            <TextView
                android:id="@+id/likeshop_review"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰" />

            <TextView
                android:id="@+id/likeshop_reviewNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89" />

        </LinearLayout>

        <TextView
            android:id="@+id/likeshop_mainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likeshop_reviewLayout"
            android:text="허니콤보, 레드콤보" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/likeshop_layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/likeshop_shopImage"
        android:layout_alignTop="@id/likeshop_shopImage"
        android:layout_toLeftOf="@+id/likeshop_next"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/likeshop_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#d847ddff"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="픽업"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/likeshop_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likeshop_pickup"
            android:background="#d8ff4747"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="현장"
            android:textColor="#fff" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/likeshop_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_chevron_right_black_24dp" />

</RelativeLayout>
