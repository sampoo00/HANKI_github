<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_delete_account_dialog"
    android:paddingBottom="10dp"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/deleteAccountMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/mypage_deleteAccountMessage"
        android:textColor="#000" />

    <EditText
        android:id="@+id/mypage_deleteAccountEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteAccountMessage"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_mypage_nickname"
        android:hint="@string/mypage_delete"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mypage_deleteAccountEt"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mypage_deletionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/mypage_deletion" />

        <Button
            android:id="@+id/mypage_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/mypage_cancel" />

    </LinearLayout>

</RelativeLayout>